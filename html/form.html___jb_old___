    <script>
        function SubmitFormData() {
            var name = $("#name").val();
            var email = $("#email").val();
            var q1 = $("#q1").val();
            var q2 = $("#q2").val();
            var q3 = $("#q3").val();
            var q4 = $("input[type=radio]:checked").val();
            $.post("../php/form.php", { name: name, email: email, q1: q1, q2: q2, q3: q3, q4: q4 },
                function(data) {
                    $('#results').html(data);
                    $('#myForm')[0].reset();
                    $('#successinfo').display = 'block';
                });
            myFunction();
        }
        function myFunction() {
            // Get the snackbar DIV
            var x = document.getElementById("snackbar");

            // Add the "show" class to DIV
            x.className = "show";

            // After 3 seconds, remove the show class from DIV
            setTimeout(function(){ x.className = x.className.replace("show", ""); }, 3000);
        }
    </script>
